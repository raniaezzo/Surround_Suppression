
paLoc = 225;
ecc_pix = 10;

% Define the polar coordinates
theta = deg2rad([paLoc paLoc]); % Convert angle to radians
rho = ecc_pix;

% Create a polar plot
polarplot(theta, rho, 'r*'); % 'r*' specifies red asterisk marker

% Convert polar coordinates to Cartesian coordinates
x = rho * cos(theta);
y = rho * sin(theta);

% Create a Cartesian plot
figure; % Create a new figure for the Cartesian plot
plot(x, y, 'r*'); % Plot the asterisk in Cartesian coordinates
title('Asterisk Plot in Cartesian Coordinates');
xlabel('X');
ylabel('Y');
xlim([-10 10])
ylim([-10 10])
%axis equal; % Set equal axis scaling for a better view
grid on; % Add grid lines